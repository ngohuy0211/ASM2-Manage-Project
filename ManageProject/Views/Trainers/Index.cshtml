@model IEnumerable<ManageProject.Models.Trainer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Search", "Trainers"))
{
    <div>
        Search by TrainerID! @Html.Editor("huy")
    </div>
    <input type="submit" value="Search">
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrainerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainerEmail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrainerEmail)
            </td>
            <td>
                @if (User.IsInRole("Trainer"))
                {
                    @Html.ActionLink("Details", "Details", new { id = item.TrainerID })
                }
                else if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit |", "Edit", new { id = item.TrainerID })
                    @Html.ActionLink(" Details |", "Details", new { id = item.TrainerID })
                    @Html.ActionLink(" Delete", "Delete", new { id = item.TrainerID })
                }
                else if (User.IsInRole("Staff"))
                {
                    @Html.ActionLink(" Details", "Details", new { id = item.TrainerID })
                }
            </td>
        </tr>
    }

</table>
